@model UserLoginDto

@{
    ViewData["Title"] = "UserLogim";
    Layout = "~/Areas/Admin/Views/Shared/_UserLoginLayout.cshtml";
    ViewBag.Title= "Login";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    <form asp-controller="User" asp-area="Admin" asp-action="Login" method="post">
                        <div class="form-group">
                            <label class="small mb-1" for="inputEmailAddress" asp-for="Email"></label>
                            <input class="form-control py-4" type="email" asp-for="Email" placeholder="Enter email address" />
                            <span asp-validation-for="Email"></span>
                            <div asp-validation-summary="All"></div>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1"  asp-for="Password"></label>
                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="Rememberme" type="checkbox" />
                                <label class="custom-control-label"asp-for="Rememberme" >Remember password</label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" href="password.html">Forgot Password?</a>
                            <input type="submit" class="btn btn-primary" value="Login"  />
                          
                        </div>
                    </form>
                </div>
           
            </div>
        </div>
    </div>
</div>