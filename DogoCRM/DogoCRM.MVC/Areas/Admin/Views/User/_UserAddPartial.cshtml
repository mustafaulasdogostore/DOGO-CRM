@model UserAddDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <span class="svg-inline--fa fa-book-open fa-w-18"></span> Add a new User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" asp-controller="User" id="form-user-add">
                    @*To check controller side*@
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" asp-for="FirstName" placeholder="First Name" />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group  col-md-6">
                            <label asp-for="LastName"></label>
                            <input class="form-control" asp-for="LastName" placeholder="Last Name" />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group  col-md-6">
                            <label asp-for="UserName"></label>
                            <input class="form-control" asp-for="UserName" placeholder="Username" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group  col-md-6">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="E-mail" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group  col-md-6">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group  col-md-6">
                            <label asp-for="PictureFile"></label>
                            <input type="file" class="form-control" asp-for="PictureFile" accept="image/*" placeholder="Please Select an image" />
                            <span class="text-danger" asp-validation-for="PictureFile"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" >
                            <label asp-for="@Model.DepartmentId"></label>
                            <select class="form-control" id="DepartmentId" asp-for="DepartmentId" asp-items="@Model.DepartmentList">
                                <option value="0">Please Select a Department</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-check col-md-6">
                            <div style="margin-left:16px;margin-top:6px">
                                <input class="form-check-input" type="checkbox" asp-for="IsManager" />
                                <label asp-for="IsManager" class="form-check-label"></label>
                                <span class="text-danger" asp-validation-for="IsManager"></span>
                            </div>
                    
                        </div>
                        <div class="form-group form-check col-md-6">
                            <div style="margin-left: 11px; margin-top: 6px">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                                <span class="text-danger" asp-validation-for="IsActive"></span>
                            </div>

                        </div>
                    </div>
                    
                    
          
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave">Add User</button>
            </div>
        </div>
    </div>
</div>