@model DepartmentListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Department Index";
}



@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Departments <button class="btn btn-success float-right" id="btnEkle">Add New Department</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Modified Name</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Modified Name</th>
                            <th>Edit</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var department in Model.Departments)
                        {
                            <tr name="@department.Id">
                                <td>@department.Id</td>
                                <td>@department.Name</td>
                                <td>@department.ModifiedDate</td>
                                <td>
                                    <button class="btn btn-primary btn-sm btn-update" data-id="@department.Id">Edit</button>
                                    <button class="btn btn-danger btn-sm btn-delete" data-id="@department.Id">Delete</button>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-2">
        @Model.Message <br />
        To back the Index page ,Plese click <a class="alert-link" asp-controller="Home" asp-action="Index">Back Index</a>

    </div>
}







